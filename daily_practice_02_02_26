#9

fact = 1

for i in range(1,6):
   fact*=i

print(fact) 

def facto(n):
    result = 1
    for i in range(1,n+1):
      result*=i
    return result
   
factorial = facto(5)  
print(factorial) 

#10 - 

def fibonacci(n):
   fibo = []
   a , b = 0, 1
   for i in range(n):
      fibo.append(a)
      a, b =b, a+b
      
   return fibo  


fibonacci_result = fibonacci(10)
print(fibonacci_result)

      
   

