for i in range(1,11):
    for j in range(1,10):
        table+=i
print(f'{i}*{j}') 
print(table)

table = 0

for i in range(1,11):
    for j in range(1,11):
       table+=i*j 
print(table)

num = 5

for i in range(num, num+1):
    for j in range(1,11):
     
     print(f"{i} X {j} = {i*j}")

